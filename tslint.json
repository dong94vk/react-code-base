{
    "extends":  [
        "tslint:latest",
        "tslint-eslint-rules",
        "tslint-config-airbnb"
    ],

    "defaultSeverity": "error",
    
    "jsRules": {},
    "linterOptions": {
        "exclude": [
            "webpack/**/*"
        ]
    },
    "rules": {
        "ter-arrow-body-style":  [false, "always"],
        "trailing-comma": [2, "always-multiline"],
        "semicolon": [2, "always"],
    
        "no-console": 2,
        "no-debugger": 2,
        "no-unexpected-multiline": 2,
    
        "no-invalid-this": 2,
        "radix": 2,
    
    
        "array-bracket-spacing": 2,
        "linebreak-style": [2, "unix"],
    
        "generator-star-spacing": [2, "after"],
    
        "react/no-multi-comp": [0, {"ignoreStateless": true}],
        "react/no-unknown-property": [2, {"ignore": ["class"]}],
        "react/prefer-es6-class": [0, "always"],
    
        "react/jsx-closing-bracket-location": [2, "after-props"],
        "react/jsx-indent-props": [2, 2],
        "react/jsx-indent": [2, 2],
        "react/jsx-max-props-per-line": [0, {"maximum": 3}],
        "react/jsx-no-bind": [0, {"allowArrowFunctions": true}],

        "align": [true, "parameters", "statements"],
        "variable-name": [true, "ban-keywords", "allow-leading-underscore"],
        "object-shorthand-properties-first": [0, "always"],
        "eofline": true,
        "import-name": false,
        "import-spacing": false,
        "interface-name": [true, "never-prefix"],
        "no-submodule-imports": false,
        "no-empty-interface": false,
        "object-literal-sort-keys": false,
        "no-implicit-dependencies": false,
        "no-unused-variable": false,
        "no-boolean-literal-compare": false,
        "no-unused-expression": [true, "allow-fast-null-checks"],
        "arrow-parens": true,
        "max-line-length": [true, 120],
        "ter-arrow-parens": [true, "always"],
        "ordered-imports": false
    },
    "rulesDirectory": []
}
